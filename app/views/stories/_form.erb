<div class="form-group">
  <label class="col-sm-3 control-label">As a </label>
  <div class="col-sm-9">
    <input type="text" name="story[role]" class="form-control role" value="<%= @story.role if @story %>">  
  </div>
</div>

<div class="form-group">
  <label class="col-sm-3 control-label">I should be able to </label>
  <div class="col-sm-9">
    <input type="text" name="story[goal]" class="form-control" value="<%= @story.goal if @story %>">
  </div>
</div>

<div class="form-group">
  <label class="col-sm-3 control-label">Because </label>
  <div class="col-sm-9">
    <input type="text" name="story[benefit]" class="form-control" value = "<%= @story.benefit if @story %>">
  </div>
</div>

<p class="grey col-sm-9 col-sm-offset-3">The following fields are optional</p>

<div class="form-group">
  <label class="col-sm-3 control-label">Additional details </label>
  <div class="col-sm-9">
    <textarea name="story[fftext]" class="form-control" rows="5">
      <%= @story.fftext if @story %>
    </textarea>
  </div>
</div>

<div class="form-group">
  <label class="col-sm-3 control-label">Assignee </label>
  <div class="col-sm-3">
    <select class="form-control" name="story[assignee_id]" >
      <option disabled selected></option>
        <% @users.each do |user| %>    
      <option value="<%= user.id %>"><%= user.name %></option>
        <% end %>
    </select>  
  </div>
</div>

<div class="form-group">
  <label class="col-sm-3 control-label">Priority </label>
  <div class="col-sm-1">
    <select class="form-control">
      <option disabled selected></option>
    </select>
  </div>
</div>




