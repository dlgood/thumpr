<div class = "row">
  <form method="POST" action="/stories/edit" id="create-stories" class="form-horizontal col-md-offset-3 col-md-6">
    <div class = "col-md-6 create-stories">
      <h2>Edit Story</h2>
    </div> 
    <div class = "col-md-6 story-group story-details">
      <div class = "story-group">
        <header>Story #<%= @story.id %> details</header>
        <div class = "thumb">
          <img src="https://www.libstash.com/public/avatars/default.png" class = "thumb" />
        </div> 
        <div class = "details-items">
          <ul>
            <li>Created by: <%= @story.user.name %></li>
            <li>Updated at: <%= @story.updated_at %></li>
            <li>Created at: <%= @story.created_at %></li>
          </ul>
        </div>
      </div>
    </div>
    <div class = "clear-both"></div>
    <input type="hidden" name="id" value="<%= @story.id %>">
      <%= erb :"stories/_form" %>
    <div class="form-group">
      <div class="col-sm-3 col-sm-offset-9">
        <input type="submit" value="Update" class="btn btn-primary btn-lg btn-block">
      </div>
    </div>
  </form>
</div>